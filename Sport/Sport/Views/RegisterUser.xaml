<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sport.Views.RegisterUser"
             NavigationPage.HasNavigationBar="True"
             Title="No notes selected"
             BackgroundColor="#139A43">
    <ContentPage.Content>
        <StackLayout Padding="15,10,15,0">
            <Image Margin="0,20,0,20" HeightRequest="100"  Source="SplashScreen.png"  IsAnimationPlaying="True"/>
            <Label Text="Register new user"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large" />
            <Entry Placeholder="Name"
                   x:Name="TxtName"></Entry>
            <Entry Placeholder="Email" 
                   x:Name="TxtEmail"></Entry>
            <Entry Placeholder="Password"
                   IsPassword="True"
                   x:Name="TxtPassword"></Entry>
            <Entry IsPassword="True" Placeholder="Re-Type Password"
                   x:Name="TxtConfirmPass"></Entry>
            <Button Text="Register" x:Name="ButtonRegister"
                    Clicked="ButtonRegister_Clicked" BackgroundColor="#053B06" TextColor="White" BorderWidth="2" CornerRadius="10" HeightRequest="40"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>